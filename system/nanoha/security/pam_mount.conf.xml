<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE pam_mount SYSTEM "pam_mount.conf.xml.dtd">

<pam_mount>
    <debug enable="0" />

    <!-- Volume definitions -->
    <volume user="obside" fstype="fuse"
            options="nodev,nosuid,quiet,allow_other"
            path="/usr/bin/gocryptfs#/home/%(USER).encrypted"
            mountpoint="/home/%(USER)"
    />

    <!-- mount options -->
    <mkmountpoint enable="1" remove="true" />
    <fuseumount>fusermount -zu %(MNTPT)</fuseumount>
</pam_mount>
