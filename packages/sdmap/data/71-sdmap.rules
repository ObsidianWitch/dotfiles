# Remove Valve HID devices uaccess over USB hidraw to prevent the corresponding
# evdev devices from disappearing when the hidraw interface is in use (e.g.
# steam, chromium).
KERNEL=="hidraw*", ATTRS{idVendor}=="28de", MODE="0600", TAG-="uaccess"

# Add a systemd device unit for the steam deck controller.
# Note: use `modprobe [-r] hid_steam` to test this rule.
# Ref: https://lists.fedoraproject.org/pipermail/devel/2012-January/160917.html
SUBSYSTEM=="input", ATTRS{name}=="Steam Deck", TAG+="systemd", ENV{SYSTEMD_ALIAS}+="/sys/subsystem/input/devices/steamdeck"
