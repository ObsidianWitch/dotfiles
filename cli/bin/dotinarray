#!/bin/bash

# dotinarray - check presence of element in array
#
# Synopsis
#   dotinarray element array_elements...
#
# Examples
#   $ array=( miaou meow nya )
#   $ dotinarray miaou "${array[@]}" && echo 'miaou in array'
#   miaou in array
#   $ dotinarray awoo "${array[@]}" && echo 'awoo in array'
dotinarray() {
    local match="$1"
    local elem; for elem in "${@:2}"; do
        [[ "$elem" == "$match" ]] && return 0
    done
    return 1
}

dotinarray "$@"
