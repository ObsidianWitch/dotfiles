<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE pam_mount SYSTEM "pam_mount.conf.xml.dtd">

<pam_mount>
    <debug enable="0" />

    <!-- Volume definitions -->
    <volume user="obside" fstype="fuse"
            options="nodev,nosuid,quiet"
            path="gocryptfs#/home/%(USER)/encrypted"
            mountpoint="/home/%(USER)/plaintext"
    />

    <volume user="obside" fstype="fuse"
            options="nodev,nosuid,allow_root"
            path="unionfs#/home/%(USER)/plaintext=RW:/home/%(USER)/public=RW"
            mountpoint="/home/%(USER)/main"
    />

    <!-- mount options -->
    <mkmountpoint enable="1" remove="true" />
    <fuseumount>fusermount -zu %(MNTPT)</fuseumount>
</pam_mount>
