#!/bin/bash

set -o errexit -o nounset

# Synopsis
#   dotln src... dest[/]`
# Description
#   Symlink files/dirs and create parent directories if necessary.
dotln() {
    [[ "$#" -ge 2 ]] || doterr 'missing file operand'
    dotmkdir "${*: -1}"
    ln --symbolic --no-dereference --force "$@"
}

dotln "$@"
