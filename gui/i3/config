# i3 configuration
# http://i3wm.org/docs/userguide.html

# Theme

## Font
font pango:DejaVu Sans Mono 10

## Windows decorations
### class                border  backgr. text    indicator
client.focused          #282828 #282828 #F8F8F2 #4777D7
client.focused_inactive #d6d6d6 #d6d6d6 #454545 #292d2e
client.unfocused        #d6d6d6 #d6d6d6 #858585 #292d2e
client.placeholder      #0c0c0c #0c0c0c #ffffff #000000
client.urgent           #900000 #900000 #ffffff #900000

### force titlebar and borders on all windows (avoid gtk3 csd borderless)
for_window [class=".*"] border normal

## status bar
bar {
    tray_output primary
    status_command i3blocks -c .config/i3/i3blocks.conf

    colors {
        background #d6d6d6
        statusline #282828
        separator  #282828

        # class            border  bg      text
        urgent_workspace   #A23351 #A23351 #d6d6d6
        focused_workspace  #282828 #282828 #d6d6d6
        active_workspace   #777777 #777777 #d6d6d6
        inactive_workspace #d6d6d6 #d6d6d6 #282828
    }
}

#---

# Variables

set $mod Mod4
set $alt Mod1

#---

# Applications autostart

## Network Manager applet
exec --no-startup-id nm-applet

## Power Manager
exec --no-startup-id xfce4-power-manager

## Volume Manager
exec --no-startup-id pasystray --notify=all

## Wallpaper
exec --no-startup-id feh --no-fehbg --bg-fill .config/i3/bg

## Screen layout
exec --no-startup-id screenlayout laptop

#---

# Applications shortcuts

## launcher
bindsym $mod+Return exec --no-startup-id dmenu_run

## terminal
bindsym $mod+Shift+Return exec --no-startup-id kitty

## file manager
bindsym $mod+Ctrl+Return exec --no-startup-id thunar

## lock screen
bindsym --release $mod+l exec --no-startup-id xflock4

## exit i3
bindsym $mod+e exec --no-startup-id .config/i3/scripts/exit.sh

## screenshots
bindsym Print exec --no-startup-id xfce4-screenshooter

## music

### play/pause
bindsym control+twosuperior exec --no-startup-id quodlibet --play-pause
bindsym XF86AudioPlay exec --no-startup-id quodlibet --play-pause

### next
bindsym control+eacute exec --no-startup-id quodlibet --next

### previous
bindsym control+ampersand exec --no-startup-id quodlibet --previous

### status
bindsym control+quotedbl exec --no-startup-id .config/i3/scripts/music.sh

## volume

### mute
bindsym XF86AudioMute exec --no-startup-id pamixer --toggle-mute

### volume inc
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer --decrease 5

### volume dec
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer --increase 5

#---

# Windows shortcuts

## kill focused window
bindsym $mod+q kill
bindsym control+q nop

## change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

## move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

## Manipulate container layout
bindsym $mod+Tab split toggle
bindsym $mod+Shift+Tab layout toggle stacking split

## floating windows

### toggle tiling / floating
bindsym $mod+Shift+space floating toggle

### change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

### drag floating windows (mouse + $mod)
floating_modifier $mod

### resize floating window
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    bindsym Escape mode "default"
}

## workspaces

### laptop screen
workspace 1 output primary
workspace 2 output primary
workspace 3 output primary
workspace 4 output primary
workspace 5 output primary

### external screen
workspace 6  output HDMI1
workspace 7  output HDMI1
workspace 8  output HDMI1
workspace 9  output HDMI1
workspace 10 output HDMI1

### switch to workspace
bindsym $mod+ampersand  workspace 1
bindsym $mod+eacute     workspace 2
bindsym $mod+quotedbl   workspace 3
bindsym $mod+apostrophe workspace 4
bindsym $mod+parenleft  workspace 5
bindsym $mod+minus      workspace 6
bindsym $mod+egrave     workspace 7
bindsym $mod+underscore workspace 8
bindsym $mod+ccedilla   workspace 9
bindsym $mod+agrave     workspace 10

bindsym control+$mod+Left  workspace prev_on_output
bindsym control+$mod+Right workspace next_on_output
bindsym control+$alt+Left  workspace prev_on_output
bindsym control+$alt+Right workspace next_on_output

### move focused container to workspace
bindsym $mod+Shift+ampersand  move container to workspace 1
bindsym $mod+Shift+eacute     move container to workspace 2
bindsym $mod+Shift+quotedbl   move container to workspace 3
bindsym $mod+Shift+apostrophe move container to workspace 4
bindsym $mod+Shift+parenleft  move container to workspace 5
bindsym $mod+Shift+minus      move container to workspace 6
bindsym $mod+Shift+egrave     move container to workspace 7
bindsym $mod+Shift+underscore move container to workspace 8
bindsym $mod+Shift+ccedilla   move container to workspace 9
bindsym $mod+Shift+agrave     move container to workspace 10

bindsym control+$mod+Shift+Left move container to workspace prev_on_output
bindsym control+$mod+ShiftRight move container to workspace next_on_output
bindsym control+$alt+Shift+Left move container to workspace prev_on_output
bindsym control+$alt+ShiftRight move container to workspace next_on_output
