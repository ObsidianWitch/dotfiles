[global]
    font = Monospace 8
    word_wrap = yes

    frame_width = 2
    frame_color = "#D6D6D6"
    separator_color = frame

    follow = mouse
    geometry = "300x5-30+20"
    padding = 8
    horizontal_padding = 8

    # Message format. Pango Markup Format is enabled.
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    markup = full
    format = "<b>%s</b>\n%b"

    # Show age of message if message is older than n seconds (-1 disable).
    show_age_threshold = 60

    # Do not remove messages if the user is idle (no mouse or keyboard input)
    # for longer than n seconds (0 disable).
    idle_threshold = 120

[shortcuts]
    close = ctrl+space

[urgency_low]
    background = "#282828"
    foreground = "#D6D6D6"
    timeout = 10

[urgency_normal]
    background = "#282828"
    foreground = "#D6D6D6"
    timeout = 10

[urgency_critical]
    background = "#900000"
    foreground = "#D6D6D6"
    timeout = 10

[power_manager_brightness]
    appname = "xfce4-power-manager"
    body    = "Brightness*"
    format  = "<b>%s</b>\nBrightness: %p"

[sound_inputs]
    appname = "pasystray"
    summary = "input*"
    format  = ""

[sound_sinks]
    appname = "pasystray"
    summary = "sink*"
    format  = "<b>Volume</b>\n%s"
