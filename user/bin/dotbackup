#!/bin/bash

set -o errexit -o nounset

# External drive: fs encrypted w/ dm-crypt
backup_extdrive() {
    local out="/run/media/$USER/extyayaka"

    # create borg snapshot before backup
    dotborg snapshot '' 'backup_extdrive'
    dotborg check

    # rsync home
    rsync --archive --delete --protect-args --progress \
        --exclude='.cache' "$HOME" "$out"
}

# Phone SD card: no encryption
backup_phone() {
    local device='HMD_Global_Nokia_2.2_HZAL1670CAJ60412338'
    local out="/run/user/$UID/gvfs/mtp:host=$device/SanDisk SD card/"

    gio mount "mtp://$device/"

    # rsync entertainment
    rsync --recursive --delete --protect-args --progress --size-only --inplace \
        "$HOME/Downloads" "$HOME/Music" "$HOME/.dotprivate" "$out"

    # copy latest borg snapshot encrypted
    dotborg export-tar --progress "::$(dotborg head)" - \
        | gpg --symmetric --output "$out/borg.tar.enc"

    gio mount --unmount "mtp://$device/"
}

help() {
    echo 'usage: dotbackup extdrive'
    echo '       dotbackup phone'
    exit 1
}

[[ -n "${1:-}" ]] || help
if [[ "$1" == "extdrive" ]]; then
    backup_extdrive
elif [[ "$1" == "phone" ]]; then
    backup_phone
else
    help
fi
