#!/bin/bash

set -o errexit -o nounset

layout_laptop() {
    xrandr --output eDP1  --auto \
           --output HDMI1 --off
}

layout_home() {
    xrandr --output eDP1  --auto \
           --output HDMI1 --auto --left-of eDP1
}

if xrandr | grep -q 'HDMI1 disconnected'; then
    layout_laptop
else
    layout_home
fi
