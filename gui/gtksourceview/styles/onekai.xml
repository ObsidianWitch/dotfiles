<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="onekai" _name="Onekai" version="1.0">

  <!-- Palette -->
  <color name="mono1"   value="#abb2bf"/>
  <color name="mono2"   value="#313640"/>
  <color name="mono3"   value="#5c6370"/>
  <color name="mono4"   value="#282c34"/>

  <color name="blue"    value="#61afef"/>
  <color name="purple"  value="#c678dd"/>
  <color name="green"   value="#98c379"/>
  <color name="red1"    value="#e06c75"/>
  <color name="red2"    value="#be5046"/>
  <color name="orange1" value="#e5c07b"/>
  <color name="orange2" value="#d19a66"/>

  <!-- Global -->
  <style name="text" foreground="mono1" background="mono4"/>
  <style name="selection" foreground="mono1" background="mono2"/>
  <style name="cursor" foreground="mono1"/>
  <style name="current-line" background="mono2"/>
  <style name="line-numbers" foreground="mono3" background="mono2"/>
  <style name="right-margin" foreground="mono1" background="mono1"/>

  <!-- Brackets -->
  <style name="bracket-match" foreground="red1"/>

  <!-- Comments -->
  <style name="def:comment" foreground="mono3"/>

  <!-- Constants -->
  <style name="def:constant" foreground="orange2"/>
  <style name="def:string" foreground="green"/>

  <!-- Identifiers -->
  <style name="def:keyword" foreground="purple"/>
  <style name="def:identifier" foreground="blue"/>
  <style name="def:statement" foreground="red1" bold="true"/>
  <style name="def:type" foreground="orange1"/>
  <style name="def:preprocessor" foreground="red2"/>

  <!-- Markup -->
  <style name="def:underlined" underline="single"/>
  <style name="def:doc-comment-element" foreground="purple" italic="true"/>

</style-scheme>
