#!/bin/bash

for filePath in $@; do
    archivePath="$filePath.tar.gz"
    encPath="$filePath.aes"
    
    apack "$archivePath" "$filePath" \
    && \
    gpg --symmetric --cipher-algo AES256 \
        --output "$encPath" \
        "$archivePath" \
    && \
    rm -rf "$filePath"
    
    rm "$archivePath"
done
