#!/bin/bash

set -o errexit -o nounset

layout_laptop() {
    xrandr --output HDMI1 --off \
           --output eDP1  --auto
    redshift -PO 5500
}

layout_home() {
    xrandr --output HDMI1 --auto --left-of eDP1 \
           --output eDP1  --auto
    redshift -PO 5500
}

if xrandr | grep -q 'HDMI1 disconnected'; then
    layout_laptop
else
    layout_home
fi
