#!/bin/bash

choice=$(echo 'reload sleep hibernate logout restart shutdown' \
         | tr ' ' '\n' \
         | dmenu)
case "$choice" in
    reload)    i3-msg restart;;
    sleep)     i3lock; systemctl suspend;;
    hibernate) systemctl hibernate;;
    logout)    i3-msg exit;;
    restart)   systemctl reboot;;
    shutdown)  systemctl poweroff;;
esac
